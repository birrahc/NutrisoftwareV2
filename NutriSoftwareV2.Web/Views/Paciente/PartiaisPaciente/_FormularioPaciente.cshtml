@model NutriSoftwareV2.Negocio.Domain.Paciente
@{
    string tituloModal = Model != null && Model.Nome != null ? "Editar Paciente" : "Cadastrar novo paciente";
}

    <form method="post" id="formularioCadastrarPaciente" class="p-0">
        <div class="modal-header">
            <h5 class="modal-title">@tituloModal</h5>
        </div>

        <input type="hidden" asp-for="Id" ident-paciente="pacienteId" />
        <div class="modal-body">
            <div class="row">
                <div class="col-12">
                    <label>Nome:</label>
                    <input type="text" asp-for="Nome" class="form-control" />
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-6">
                    <label>Sexo:</label>
                    <select asp-for="Sexo" asp-items="Html.GetEnumSelectList<NutriSoftwareV2.Negocio.Enums.EN_Sexo>()" class="form-control">
                        <option selected="selected" value="">Selecione</option>
                    </select>
                </div>
                <div class="col-6">
                    <label>Nascimento:</label>
                    <input type="date" asp-for="Nascimento" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label>CPF:</label>
                    <input type="text" asp-for="CPF" class="form-control" />
                </div>
                <div class="col-6">
                    <label>Profissão:</label>
                    <input type="text" asp-for="Profissao" class="form-control" />
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-6">
                    <label>Telefone:</label>
                    <input type="text" asp-for="Telefone" class="form-control" />
                </div>
                <div class="col-6">
                    <label>Tipo de Contato:</label>
                    <select asp-for="TipoDeContatoTelefone" asp-items="Html.GetEnumSelectList<NutriSoftwareV2.Negocio.Enums.EN_TipoDeContatoTelefone>()" class="form-control">
                        <option selected="selected" value="">Selecione</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <label>Email:</label>
                    <input type="text" asp-for="Email" class="form-control" />
                </div>
            </div>
        </div>
        <div class="modal-footer">
        <button type="button" onclick="FecharModal('modalPaciente')" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" onclick="cadastrarPaciente();" class="btn btn-primary">Save changes</button>
        </div>
    </form>
