@model NutriSoftwareV2.Negocio.Domain.Paciente

<div class="modal-header">
    <h5 class="modal-title">Arquivos do paciente @Model?.Nome</h5>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-12 card-shadow">
            <button value="@Model?.Id" onclick="AbrirForularioArquivoModal_OnClick(this.value)" class="btn btn-outline-secondary float-end mt-1">
                <i class="fa fa-plus"></i> Cadastrar Novo Arquivo
            </button>
            @if (Model?.Arquivos?.Count > 0)
            {
                <h4 class="text-center mt-2">Lista de arquivos</h4>
                <table class="table mt-2">
                    <thead>
                        <tr>
                            <th>Nome do Arquivo</th>
                            <th>Tipo</th>
                            <th>Tamanho</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model?.Arquivos)
                        {
                            <tr>
                                <td>@item.NomeDocumento</td>
                                <td>@item.TipoDocumento</td>
                                <td>@item.TamanhoArquivo</td>
                                <td>
                                    <button class="btn btn-black">
                                        <i class="fa fa-trash" title="Remover"></i>
                                    </button>
                                    <button class="btn btn-black">
                                        <i class="fa fa-pencil" title="Editar"></i>
                                    </button>
                                    <button value="@item.Id" onclick="DownloadArquivo_OnClick(this.value)" class="btn btn-black">
                                        <i class="fa fa-upload" title="Baixar Arquivo"></i>
                                    </button>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center mt-3"><b>Nenhum arquivo cadastrado para este paciente.</b></p>
            }

        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="fa fa-close"></i>  Fechar
    </button>

</div>
