@model NutriSoftwareV2.Web.Identity.RegisterViewModel

<div class="row mt-5">
    <div class="col-md-5 col-lg-5 m-auto p-4">
        <h3 class="text-center">Registro de Usuário</h3>
        <form method="post">
            <div class="form-group">
                <label asp-for="UsuarioSistema.Nome"></label>
                <input asp-for="UsuarioSistema.Nome" class="form-control" />
                <span asp-validation-for="UsuarioSistema.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioSistema.SobreNome"></label>
                <input asp-for="UsuarioSistema.SobreNome" class="form-control" />
                <span asp-validation-for="UsuarioSistema.SobreNome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioSistema.CPF"></label>
                <input asp-for="UsuarioSistema.CPF" class="form-control" />
                <span asp-validation-for="UsuarioSistema.CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassWord"></label>
                <input asp-for="PassWord" type="password" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConirmPassword"></label>
                <input asp-for="ConirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConirmPassword" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary mt-3">Registrar</button>
        </form>
    </div>
</div>
